<UserControl x:Class="BenLib.WPF.SwitchableTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BenLib.WPF"
             mc:Ignorable="d" Height="18" SnapsToDevicePixels="True">
    <Grid Name="grid">
        <TextBox Name="tb" Visibility="Hidden" VerticalAlignment="Center" Padding="0" PreviewLostKeyboardFocus="tb_PreviewLostKeyboardFocus" PreviewKeyDown="tb_PreviewKeyDown" TextChanged="tb_TextChanged" FocusVisualStyle="{x:Null}"/>
        <Border Name="bd" BorderThickness="1" Margin="2,0,0,0" CornerRadius="0" VerticalAlignment="Center">
            <TextBlock Name="lb" VerticalAlignment="Center" MouseEnter="lb_MouseEnter" MouseLeave="lb_MouseLeave" MouseDown="lb_MouseDown"/>
        </Border>
        <Grid Name="gd" Height="0" Width="0" Focusable="True" GotFocus="gd_GotFocus"/>
    </Grid>
</UserControl>
