<Window x:Class="BenLib.InputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BenLib"
             mc:Ignorable="d" ResizeMode="NoResize" Title="{Binding Caption}" SizeToContent="WidthAndHeight">
    <Border Padding="12,12,12,0">
        <Grid>
            <StackPanel Orientation="Vertical">
                <Label Content="{Binding Text}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="353"/>
                <TextBox HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="353"/>
                <Border Height="50" Background="#F0F0F0" Margin="-12,18,-12,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,18,0">
                        <Button Content="Annuler" VerticalAlignment="Center" Width="75" Height="24"/>
                        <Button Content="OK" VerticalAlignment="Center" Width="75" Height="24" Margin="11,0,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</Window>
